# nginx conf - at some point, it will be config
user www-data;
worker_processes 1;

pid  /var/run/nginx.pid;

events {
    worker_connections 1024;
    multi_accept on;
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    sendfile    on;
    tcp_nopush  on;

    keepalive_timeout  65;
    tcp_nodelay        on;

    upstream uwsgicluster {
        server 127.0.0.1:6969;
    }

    server {
        listen 80;
        server_name %(server_name)s;
        charset utf-8;
        access_log /var/log/nginx/%(server_name)s-access.log;
        error_log  /var/log/nginx/%(server_name)s-error.log;

        gzip on;
        gzip_http_version 1.1;
        gzip_vary on;
        gzip_comp_level 6;
        gzip_proxied any;
        gzip_min_length  1100;
        gzip_buffers 16 8k;
        gzip_types text/plain text/css application/x-javascript text/xml application/xml application/xml+rss text/javascript;
        gzip_disable "MSIE [1-6].(?!.*SV1)";
        
        root %(curr_path)s;

        location = /robots.txt  { access_log off; log_not_found off; }
        location = /favicon.ico { access_log off; log_not_found off; }

        error_page 503 @maintenance;
        location @maintenance {
          rewrite ^(.*)$ /maintenance.html break;
        }

        if (-f $document_root/maintenance.html) {
            return 503;
        }

        if ($request_uri ~* "^/robots.txt") {
          rewrite ^/robots.txt$ /static/robots.txt last;
          break;
        }

        if ($request_uri ~* "^/favicon.ico") {
          rewrite ^/favicon.ico$ /static/img/favicon.ico last;
          break;
        }

        location /static/ {
            root %(curr_path)s;
        }

        location ~* \.(less|ico|css|js|gif|jpe?g|png)(\?[0-9]+)?$ {
            expires max;
            add_header Pragma public;
            add_header Cache-Control "public, must-revalidate, proxy-revalidate";
            access_log off;
            log_not_found off;
            tcp_nodelay off;
            break;
        }

        location /media/admin/ {
            autoindex on;
            alias %(django_admin_media_path)s;
        }

        location /media/ {
            root %(curr_path)s;
        }

        location / {
            uwsgi_pass uwsgicluster;
            include /etc/nginx/uwsgi_params;
        }
    }
}
